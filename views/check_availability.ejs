<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>check available</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   
    
<style>
    .dates{
        width: 100%;
          white-space: nowrap;
          scrollbar-width: none;   
          overflow-x: auto;
        
    }
    .date-button {
            width: 150px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #fff;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .date-button:hover {
            background-color: aquamarine;
            color: #fff;
        }
        
        .slots{
            display: block;
            
            align-items: flex-start;
            margin-left: 30px;
            width: 50%;
            margin-top: 20px;
            margin-bottom: 30px;
        }
        .container {
            margin-top: 5px;
            margin-right: 2px;
        }
       
          .book{
            width: 100px;
            margin-bottom: 30px;
        
            border-color: #333;
            text-align: center;
          }
          .book:hover{
            background-color: aquamarine;
            color: #fff;
          }
</style>
</head>
<body>
    <%- include("partials/header.ejs") %>

    <div class="col device-width mt-5 container">
        <label>Choose a date :</label>
        <div class=" dates d-flex " id="dates-container">
            <!-- Dates will be populated here -->
        </div>
        <div class="slots" id="slots-container">
            <!-- Slots will be displayed here -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        let tickets = {
            "Morning": 50,
            "Noon": 50,
            "Evening": 50
        };

        function populateDates() {
            const container = document.getElementById("dates-container");
            const today = new Date();

            for (let i = 0; i < 7; i++) {
                const col = document.createElement("div");
                col.className = "col-6 col-sm-4 col-md-3 col-lg-2 mb-3";

                const button = document.createElement("button");
                button.className = "date-button btn btn-block";
                const date = new Date(today);
                date.setDate(today.getDate() + i);

                const options = { month: 'short', day: 'numeric', weekday: 'short' };
                const formattedDate = date.toLocaleDateString('en-US', options);

                button.textContent = formattedDate;
                button.addEventListener("click", () => showSlots(formattedDate));

                col.appendChild(button);
                container.appendChild(col);
            }
        }

        function showSlots(date) {
            const slotsContainer = document.getElementById("slots-container");
            slotsContainer.innerHTML = ""; // Clear previous slots

            const dateHeader = document.createElement("h2");
            dateHeader.textContent = date;
            slotsContainer.appendChild(dateHeader);

            const slots = ["Morning", "Noon", "Evening"];
            slots.forEach(slot => {
                const slotDiv = document.createElement("div");
                slotDiv.className = "slot";

                const slotLabel = document.createElement("label");
                slotLabel.innerHTML = `<span style="font-size: 1.3em;">${slot} Tickets Available: 50</span>`;
                slotDiv.appendChild(slotLabel);

                const bookButton = document.createElement("button");
                bookButton.className = "book btn btn-block mt-2";
                bookButton.textContent = "Book";
                slotDiv.appendChild(bookButton);

                slotsContainer.appendChild(slotDiv);
            });
        }

        populateDates();
    </script>
    <%- include('partials/footer.ejs') %>
</body>
</html>
